{
  "name": "@icyuba/react-modal-portal-hook",
  "version": "0.0.0",
  "description": "A simple hook for creating portals for modals in React",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && tsc && swc src -d dist"
  },
  "author": "iCyuba",
  "repository": {
    "type": "git",
    "url": "https://github.com/iCyuba/react-modal-portal-hook.git"
  },
  "homepage": "https://github.com/iCyuba/react-modal-portal-hook#readme",
  "license": "MIT",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./usePortal": {
      "import": "./dist/usePortal.js",
      "types": "./dist/types/usePortal.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.78",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
